# =============================================================================
# HyperGate Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=hypergate
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=hypergate
POSTGRES_PORT=5432

# Full connection string (used by Prisma)
DATABASE_URL=postgresql://hypergate:your_secure_postgres_password_here@localhost:5432/hypergate

# -----------------------------------------------------------------------------
# Redis (Rate Limiting & Caching)
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3001
API_PORT=3001

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=https://your-production-domain.com

# -----------------------------------------------------------------------------
# Blockchain Configuration
# -----------------------------------------------------------------------------
# Hyperliquid RPC endpoint
HYPERLIQUID_RPC_URL=https://api.hyperliquid.xyz/evm

# Private key for signing transactions (optional, for admin operations)
# WARNING: Store securely, never commit to git
PRIVATE_KEY=

# USDC Bridge Contract address on Hyperliquid
USDC_BRIDGE_ADDRESS=0x2Df1c51E09aECF9cacB7bc98cB1742757f163dF7

# -----------------------------------------------------------------------------
# WalletConnect (Demo App)
# -----------------------------------------------------------------------------
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Rate limiting is enabled by default when Redis is available

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
